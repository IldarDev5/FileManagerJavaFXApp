<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.text.Text?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml" spacing="10">
    <HBox spacing="10">
        <Button onAction="#prevBtnClicked" />
        <Button onAction="#nextBtnClicked" />
        <Text fx:id="pathText" />
        <Button text="Search..." onAction="#searchClicked" />
    </HBox>
    <HBox spacing="10">
        <Button fx:id="copyBtn" />
        <Button fx:id="pasteBtn" />
        <Button fx:id="deleteBtn" />
        <Button fx:id="propsBtn" />
        <Button fx:id="createNewBtn" />
    </HBox>
    <TableView fx:id="filesView">
        <columns>
            <TableColumn text="Name" fx:id="nameCol" />
            <TableColumn text="Size" fx:id="sizeCol" />
            <TableColumn text="Last time changed" fx:id="changedCol" />
            <TableColumn text="Type" fx:id="typeCol" />
        </columns>
    </TableView>
</fx:root>